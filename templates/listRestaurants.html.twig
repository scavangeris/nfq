{% extends "base.html.twig" %}
{% block body %}
<div class="container">
  <div class="col-12">
    <div class="row">
        <div class="col-2">
            <a href="{{ path('restaurant_create')}}"><button class="btn-success padded">Add Restaurant</button></a>
        </div>  
        <table id="restaurantList" class="table text-center">
        <thead>
            <tr>
            <th data-sortable="false" scope="col">ID</th>
            <th data-sortable="true" scope="col">Title</th>
            <th data-sortable="false" scope="col">Photo</th>
            <th data-sortable="false" scope="col">Active tables</th>
            <th data-sortable="false"scope="col">Status</th>
            <th data-sortable="false"scope="col">Edit</th>
            <th data-sortable="false" scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            {% for restaurant in restaurants %}
            <tr>
                <td>{{restaurant.id}}</td>
                <td>{{restaurant.title}}</td>
                <td><a href="{{ asset('uploads/' ~ restaurant.photo) }}"><img style="height: 30px;" src="{{ asset('uploads/' ~ restaurant.photo) }}"></a></td>
                <td>{{restaurant.tables}}</td>
                {% if restaurant.status == true %} 
                    <td style="color: green;">Active</td>
                        {% else %}
                            <td style="color: red;">Inactive</td>
                {% endif %}
                <td><a href="{{ path('restaurant_edit', {'id': restaurant.id})}}"><button class="btn-btn">Edit</button></a></td>
                <td><a href="{{ path('restaurant_delete', {'id': restaurant.id})}}"><button class="btn-danger">Delete</button></a></td>
            </tr>
            {% endfor %}
        </tbody>
        </table>
    </div>
  </div>
</div>
{% endblock %}